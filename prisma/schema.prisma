generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SongHistory {
  id              String   @id @unique
  title           String
  artist          String
  score           Float
  date            DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([date])
}